      <section class="py-0" id="split-static">

        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-6 bg-white px-0 order-lg-2">
              <div class="sticky-top vh-lg-100 py-9">
                <div class="bg-holder" data-zanim-trigger="scroll" data-zanim-lg='{"animation":"zoom-out-slide-left","delay":0.4}'><p class="newStory"><h2>Read through the latest <br> open story.<h2></p>
                </div>
                <div style="padding-right: 17px; height:420px; overflow-y: scroll; position: relative;" rows="11">
                  <p class="text-black"><%=data%></p>
                </div>
                
                  
                
              
              </div>
            </div>




            <div class="col-lg-6 bg-white py-6">
              <div class="row h-100 align-items-center justify-content-center">

    

                <div class="col-lg-10" data-zanim-timeline='{"delay":0.4}' data-zanim-trigger="scroll">
                  <h1 class="font-weight-light text-uppercase fs-2 fs-sm-4 fs-lg-2 fs-xl-4"><span class="d-block overflow-hidden"><span class="d-block mb-1" data-zanim-xs='{"delay":0.1}'></span></span><span class="d-block overflow-hidden"><span class="d-inline-block" data-zanim-xs='{"delay":0.2}'><span class="display-4 fs-3 fs-sm-5 fs-lg-3 fs-xl-5 font-weight-black">Continue The Story</span></span>
                    </span><span class="d-block overflow-hidden"><span class="d-block mt-2" data-zanim-xs='{"delay":0.3}'>Read the story to the right and help build it</span></span>
                  </h1>
                  <div class="overflow-hidden">
                    <form method="POST" action="/new">
                    <textarea class="form-control border-300 mt-3" type="text" name="story" rows="11" placeholder="Begin or add to the story"class ="form"></textarea>
                  </div>
                  <div data-zanim-xs='{"delay":0.5}'><button class="btn btn-block btn-dark mt-4">Continue<span class="fa fa-paper-plane ml-1"></span></button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- end of .container-->

      </section>
      <!-- <section> close ============================-->
